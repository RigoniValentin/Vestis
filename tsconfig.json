{
  "compilerOptions": {
    "target": "ES2021",
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "baseUrl": "./src",
    "paths": {
      "@*": ["*"]
    },
    "typeRoots": ["@types", "./node_modules/@types"]
  },
  "include": ["src"],
  "exclude": ["node_modules"],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
